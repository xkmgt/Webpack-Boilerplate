    "config": "^3.1.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "^0.0.2",
    "express-handlebars": "^3.1.0",
    "express-session": "^1.16.1",
    "express-status-monitor": "^1.2.6",
    "express-validator": "^5.3.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.14",
    "lusca": "^1.6.1",
    "morgan": "^1.9.1",
    "pug": "^2.0.3",
